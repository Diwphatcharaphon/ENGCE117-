#include <stdio.h>

int main() {
    int value = 0;

    for (;;) {
        printf("Enter a number (1-10): ");

        if (scanf("%d", &value) != 1) {
            return 1; 
        }

        if (value >= 1 && value <= 10) {
            break;   // ค่าถูกต้อง ออกจากลูป
        }

        // ถ้าค่าผิด แสดงข้อความเตือน
        printf("Error: Please enter a number between 1 and 10.\n");
    }

    printf("Input accepted: %d\n", value);
    return 0;
}
