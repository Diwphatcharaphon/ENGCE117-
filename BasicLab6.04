#include <stdio.h>

void computeSumAndProduct(int firstNum, int secondNum, int *sumResult, int *productResult) {
    if (sumResult != NULL) {
        *sumResult = firstNum + secondNum;  
    }
    if (productResult != NULL) {
        *productResult = firstNum * secondNum; 
    }
}

int main() {
    int numberA;           
    int numberB;          
    int sumValue;          
    int productValue;       

    printf("Please enter the first integer: ");
    if (scanf("%d", &numberA) != 1) {
        printf("Error: Invalid input.\n");
        return 1;
    }

    printf("Please enter the second integer: ");
    if (scanf("%d", &numberB) != 1) {
        printf("Error: Invalid input.\n");
        return 1;
    }

    computeSumAndProduct(numberA, numberB, &sumValue, &productValue);

    printf("\n=== CALCULATION REPORT ===\n");
    printf("Input Numbers: %d and %d\n", numberA, numberB);
    printf("Sum: %d\n", sumValue);
    printf("Product: %d\n", productValue);

    return 0;
}
