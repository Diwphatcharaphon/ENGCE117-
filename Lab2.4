#include <stdio.h>
void explode(char str1[], char splitter, char str2[][10], int *count) {
    int i = 0, j = 0;
    *count = 0;
    while (str1[i] != '\0') {
        if (str1[i] == splitter) {
            str2[*count][j] = '\0';   // จบคำ
            (*count)++;               // เพิ่มจำนวนคำ
            j = 0;                    // เริ่มคำใหม่
        } else {
            str2[*count][j] = str1[i];
            j++;
        }
        i++;
    }
    // ปิดคำสุดท้าย
    str2[*count][j] = '\0';
    (*count)++;
}
int main() {
    char out[20][10];
    int num;
    explode("SA/WAT/DEE/KUB/POMM", '/', out, &num);
    for (int i = 0; i < num; i++) {
        printf("str2[%d] = %s\n", i, out[i]);
    }
    printf("count = %d\n", num);
    return 0;
}
