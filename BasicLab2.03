#include <stdio.h>

int main(void)
{
    int termcode;
    float amount, rate, interest;

    if (scanf("%d %f", &termcode, &amount) != 2)
        return 1;

    if (termcode == 1)
    {
        rate = (amount < 5000) ? 0.03 : 0.04;
    }
    else if (termcode == 2)
    {
        rate = (amount < 10000) ? 0.05 : 0.065;
    }
    else if (termcode == 3)
    {
        rate = 0.08;
    }
    else
    {
        printf("Invalid Term Code\n");
        return 0;
    }

    interest = amount * rate;
    printf("%.2f\n", interest);

    return 0;
}

