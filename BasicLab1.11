#include <stdio.h>

int main(void)
{
    int categoryCode;
    float price, rate, vatAmount, totalBill;

    if (scanf("%f %d", &price, &categoryCode) != 2)
        return 1;

    switch (categoryCode)
    {
        case 1:
            rate = 0.07;
            break;
        case 2:
            rate = 0.00;
            break;
        case 3:
            rate = 0.15;
            break;
        default:
            printf("Invalid Category\n");
            return 0;
    }

    vatAmount = price * rate;
    totalBill = price + vatAmount;

    printf("VAT Amount: %.2f\n", vatAmount);
    printf("Total Price: %.2f\n", totalBill);

    return 0;
}

