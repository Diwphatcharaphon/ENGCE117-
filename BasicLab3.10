#include <stdio.h>

struct Item {
    char name[50];
    float unitPrice;
    int quantity;
};

int main(void) {
    int N;
    float subTotal = 0.0;
    const float VAT_RATE = 0.07;

    if (scanf("%d", &N) != 1)
        return 1;

    struct Item items[N];
    int idx = 0;

    puts("---RECEIPT ---");

    while (idx < N) {
        float cost;

        if (scanf("%s %f %d",
                  items[idx].name,
                  &items[idx].unitPrice,
                  &items[idx].quantity) != 3) {
            return 1;
        }

        cost = items[idx].unitPrice * items[idx].quantity;
        printf("%s x %d = %.2f\n",
               items[idx].name,
               items[idx].quantity,
               cost);

        subTotal += cost;
        idx++;
    }

    float vat = subTotal * VAT_RATE;
    float grandTotal = subTotal + vat;

    puts("------------");
    printf("Subtotal: %.2f\n", subTotal);
    printf("VAT (7%%): %.2f\n", vat);
    printf("Grand Total: %.2f\n", grandTotal);

    return 0;
}

