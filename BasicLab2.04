#include <stdio.h>

int main(void)
{
    float principal, payment;
    int month = 0;

    const float RATE = 0.01;
    const float PENALTY = 10.0;

    if (scanf("%f %f", &principal, &payment) != 2)
        return 1;

    do
    {
        float interest = principal * RATE;
        month++;

        principal += interest;

        if (payment < interest)
            principal += PENALTY;

        principal -= payment;

        printf("Month %d: Remaining %.2f\n", month, principal);

        if (month >= 10 && principal > 0)
        {
            printf("Loan settled in 10+ months.\n");
            return 0;
        }

    } while (principal > 0);

    printf("Loan settled in %d months.\n", month);
    return 0;
}

