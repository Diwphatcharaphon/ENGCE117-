#include <stdio.h>

#define SIZE 5   

int sumArray(int data[], int length)
{
    int result = 0;   
    int index;

    for (index = 0; index < length; index++)
    {
        result = result + data[index];
    }

    return result;    
}

int main()
{
    int values[SIZE];     
    int sum;            
    float average;        
    int i;

    for (i = 0; i < SIZE; i++)
    {
        scanf("%d", &values[i]);
    }

    sum = sumArray(values, SIZE);

    average = (float)sum / SIZE;

    printf("--- ARRAY AVERAGE REPORT ---\n");

    printf("Recorded Numbers: ");
    for (i = 0; i < SIZE; i++)
    {
        printf("%d ", values[i]);
    }

    printf("\n");
    printf("Total Sum: %d\n", sum);
    printf("Average: %.2f\n", average);

    return 0;   
}
